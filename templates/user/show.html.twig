{% extends 'base.html.twig' %}

{% block title %}
	{{ user.firstName ~ ' ' ~ user.lastName }}
{% endblock %}

{% block main %}
	<div class="table-responsive containerShow">
		<div class="divAvatar"><img src="{{ user.avatar }}" alt=""></div>
		<div>
			<h3>Profil</h3>
			<h1>{{ user.title ~ ' ' ~ user.firstName ~ ' ' ~ user.lastName }}</h1>
			<p>Date de naissance :
				{{ user.birthDay | date('d/m/Y') }}</p>
			<p>Adresse :
				{{ user.address }}
				{{ user.zipCode }},
				{{ user.city }}</p>
			<p>Courriel :
				{{ user.email }}</p>
			<p>Téléphone :
				{{ user.phoneNumber }}</p>
			<p>
				Chez V-B Formation depuis le :
				{{ user.hiringDate | date('d/m/Y') }}</p>
			<p>Formateur en :</p>
			<ul>
				{% for category in user.categories %}
					<li>
						<a href="{{ path('category_show', {'id':category.id}) }}">{{ category.name }}</a>
					</li>
				{% endfor %}
			</ul>
			<p>Statut :
				{% if user.roles[0] == "ROLE_SUPER_ADMIN" %}
					Direction
				{% elseif user.role == "ROLE_ADMIN" %}
					Secrétaire
				{% elseif user.title == "M." %}
					Formateur
				{% else %}
					Formatrice
				{% endif %}
			</p>
		</div>
	</div>
	<a href="{{ path('user_changePassword', {'id':user.id}) }}" class="btn btn-secondary btn-changePassword">Changer votre mot de passe</a>
{% endblock %}
