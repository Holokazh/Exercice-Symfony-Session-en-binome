							<a class="nav-link btn-connected" href="{{ path('admin_panel') }}">Panel administrateur</a>
						{% endif %}
						<a class="nav-link btn-connected" href="{{ path('user_show', {'id':app.user.id}) }}">{{ app.user.email }}</a>
						<a class="nav-link btn-connected" href="{{ path('app_logout') }}">DÃ©connexion</a>
					{% else %}
						<a class="nav-link" href="{{ path('app_login') }}">CONNEXION</a>
					{% endif %}
