<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			V-B |
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}
			<!-- Bootstrap -->
			<link
			rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
			<!-- CSS -->
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<header>
				<nav class="navbar navbar-expand-lg navbar-light p-3">
					<a class="navbar-brand pl-5" href="{{ path('home') }}">Accueil</a>
					<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item px-3 active">
								<a class="nav-link" href="{{ path('listAllTrainings') }}">Nos formations</a>
							</li>
							<li class="nav-item px-3">
								<a class="nav-link" href="{{ path('listAllSessions') }}">Nos prochaines sessions</a>
							</li>
							<li class="nav-item px-3">
								<a class="nav-link" href="#">Contact</a>
							</li>
							<li class="nav-item px-3">
								<a class="nav-link" href="#">A propos</a>
							</li>
						</ul>
					</div>
					{% if app.user %}
						{% if is_granted('ROLE_ADMIN') %}
							<a class="nav-link btn-connected" href="{{ path('admin_panel') }}">Panel administrateur</a>
						{% endif %}
						<a class="nav-link btn-connected" href="{{ path('user_show', {'id':app.user.id}) }}">{{ app.user.email }}</a>
						<a class="nav-link btn-connected" href="{{ path('app_logout') }}">DÃ©connexion</a>
					{% else %}
						{# <a class="nav-link btn-connected" href="{{ path('admin_panel') }}">Panel administrateur</a> #}
						<a class="nav-link" href="{{ path('app_login') }}">CONNEXION</a>
					{% endif %}
				</nav>
			</header>
			{% block main %}{% endblock %}
			<footer>
				<div class="container">
					<div class="row divFooter">
						<div class="col">
							<h1>V-B Formation</h1>
							<p>20 place du capitaine Dreyfus
								<br>68000 Colmar</p>
							<p>00 00 00 00 00</p>
						</div>
						<div class="col divFooterCenter">
							<a href="#">Nous contacter</a>
							<a href="#">Vos questions</a>
							<a href="#">A propos</a>
						</div>
						<div class="col">
							<p>Notre centre de formation</p>
						</div>
					</div>
				</div>
			</footer>
		{% endblock %}
		{% block javascripts %}
			<script src="https://kit.fontawesome.com/6277cc7eb0.js"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
		{% endblock %}
	</body>
</html>

