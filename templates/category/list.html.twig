{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<a href="{{ path('home') }}">Retour à l'accueil<a>
			<div class="table-responsive containerIndex">
				<table class="table">
					<thead class="thead">
						<tr>
							<th>Nom de la catégorie</th>
							<th>Modifier</th>
							<th>Supprimer</th>
							{# <th>Module(s)</th> #}
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.name }}</td>
								<td>
									<a href="{{ path('category_edit', {'id':category.id}) }}" class="btn btn-info">Modifier</a>
								</td>
								<td>
									<a href="#" class="btn btn-danger">Supprimer</a>
								</td>
								{# <td>{% for module in category.modules %}{{ module ~ ' - ' }}{% endfor %}</td> #}
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('category_add') }}" class="btn btn-primary btnAjout">Ajouter une catégorie</a>
			</div>
		{% endblock %}
