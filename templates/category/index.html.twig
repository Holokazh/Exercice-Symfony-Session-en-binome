{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block main %}
	<div class="table-responsive containerIndex">
		<div class="divContainerTable">
			{% if is_granted('ROLE_SUPER_ADMIN') %}
				<a href="{{ path('category_add') }}" class="btn btn-primary btnAjout">Ajouter une catégorie</a>
			{% endif %}
			<table class="table">
				<thead class="thead">
					<tr>
						<th>Nom de la catégorie</th>
						<th>Détails</th>
						<th>Modifier</th>
						<th>Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.name }}</td>
							<td>
								<a href="{{ path('category_show', {'id':category.id}) }}">
									<i class="fas fa-info-circle"></i>
								</a>
							</td>
							<td>
								<a href="{{ path('category_edit', {'id':category.id}) }}" class="btn btn-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('category_delete', {'id':category.id}) }}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
